<!-- Find out way to get current date > blog date, compare and contrast -->
<div class="blog-title-container">
  <h1 class="blog-index-title"> Get involved with our Events below </h1>
</div>
<div class="home-container">
  <p><%= link_to "Home", root_path %></p>
  <% if policy(Gathering).new? %>
    <%= link_to "New Event", new_gathering_path %>
  <% end %>
</div>

<div class="main-blog-container">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1582107626018-42c0558ac409?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2551&q=80)">
    <%= @gatherings[0].title %>
  </div>
</div>

<div class="blog-item-container">
  <% @gatherings.each do |gathering| %>
    <div class="flip-card-container">
      <div class="flip-card">

        <div class="card-front">
          <figure>
            <div class="img-bg"></div>
            <img src="https://images.unsplash.com/photo-1488190211105-8b0e65b80b4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" alt="Brohm Lake">
              <figcaption class="blog-card-title"><%= gathering.title %>  |  <%= gathering.date %></figcaption>
          </figure>
          <ul class="blog-card-content">
            <% if gathering.description %>
            <li><%=gathering.description %></li>
             <% end %>
          </ul>
        </div>
        <div class="card-back">
          <figure>
            <div class="img-bg"></div>
            <img src="https://images.unsplash.com/photo-1488190211105-8b0e65b80b4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" alt="Brohm Lake">
          </figure>

          <button class="blog-read-button"><%= link_to "See more", gathering_path(gathering) %></button>

          <div class="design-container">
            <span class="design design--1"></span>
            <span class="design design--2"></span>
            <span class="design design--3"></span>
            <span class="design design--4"></span>
            <span class="design design--5"></span>
            <span class="design design--6"></span>
            <span class="design design--7"></span>
            <span class="design design--8"></span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


