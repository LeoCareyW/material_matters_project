<div class="back-button">
  <%= link_to blogs_path do %>
  <div class="arrow-wrap">
    <span class="arrow-part-1"></span>
    <span class="arrow-part-2"></span>
    <span class="arrow-part-3"></span>
  </div>
  <% end %>
</div>

<div class="dropDown-wrapper">
  <input type="checkbox" id="dropDown-toggle">
  <label for="dropDown-toggle" class="dropDown-toggle-label">MENU</label>
  <div class="dropDown">
    <%= link_to gatherings_path do %>
    <input type="radio" id="option-1" name="options">
    <label for="option-1">events</label>
    <% end %>
    <%= link_to partners_path do %>
    <input type="radio" id="option-2" name="options">
    <label for="option-2">spotlight</label>
    <% end %>
    <%= link_to teams_path do %>
    <input type="radio" id="option-3" name="options">
    <label for="option-3">team</label>
    <% end %>
  </div>
</div>
<div class="parent-blog-show-container">
  <div class="blog-show-container">
    <% if @blog.photos[0] %>
      <%= cl_image_tag @blog.photos[0].key %>
    <% end %>
<section>
  <h2><%= @blog.title %></h2>
  <h6> <%= @blog.date %> </h6>
  <% if @blog.mp3_file_name != nil %>
        <%= audio_tag @blog.mp3, class: "audio-play" %>
        <p class="btn btn-primary audioButton">Play</p>
      <% end %>
  <div class="row">
    <div id="left">
      <p><%= @blog.content %></p>
    </div>
    <% if @blog.photos[1] %>
  <div id="right"><%= cl_image_tag @blog.photos[1].key %></div>
    <% end %>
</div>
<div class="row2">
  <div id="left2">
    <h2> <%= @blog.date %> </h2>
    <p><%= @blog.contentMain %></p>

  </div>
</div>
</section>
   <% if policy(Blog).destroy? %>
      <%= link_to "Delete Blog", blog_path(@blog), :method => :delete, data: { confirm: 'Are you sure?'} %>
      <%= link_to "Edit Blog", edit_blog_path(@blog) %>
  <% end %>

  </div>
</div>
