<div>
  <p><%= @blog.title %></p>
  <p><%= @blog.date %></p>
  <p><%= @blog.content %></p>
</div>

 <%= link_to "Back to all blogs", blogs_path %>

<% if current_user == @blog.user %>
 <%= link_to "Delete Blog", blog_path(@blog), :method => :delete, data: { confirm: 'Are you sure?'} %>
 <%= link_to "Edit Blog", edit_blog_path(@blog) %>
<% end %>
